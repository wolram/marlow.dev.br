generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CampaignStatus {
  draft
  scheduled
  sending
  sent
  failed
}

enum RecipientStatus {
  queued
  sent
  delivered
  opened
  clicked
  bounced
  complained
  unsubscribed
}

enum EventType {
  sent
  delivered
  opened
  clicked
  unsubscribed
  bounced
  complained
}

model Campaign {
  id           String         @id @default(cuid())
  slug         String         @unique
  title        String
  language     String
  subject      String
  preheader    String?
  markdownBody String
  htmlBody     String?
  isPublic     Boolean        @default(true)
  status       CampaignStatus @default(draft)
  scheduledAt  DateTime?
  sentAt       DateTime?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  recipients CampaignRecipient[]
  links      CampaignLink[]
  events     Event[]
}

model CampaignRecipient {
  id           String          @id @default(cuid())
  campaignId   String
  subscriberId String
  email        String
  messageId    String?         @unique
  status       RecipientStatus @default(queued)
  sentAt       DateTime?
  deliveredAt  DateTime?
  openedAt     DateTime?
  clickedAt    DateTime?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  events   Event[]

  @@unique([campaignId, subscriberId])
}

model CampaignLink {
  id          String   @id @default(cuid())
  campaignId  String
  originalUrl String
  shortCode   String   @unique
  clickCount  Int      @default(0)
  createdAt   DateTime @default(now())

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
}

model Event {
  id                  String   @id @default(cuid())
  campaignId          String?
  campaignRecipientId String?
  type                EventType
  metadata            Json?
  createdAt           DateTime @default(now())

  campaign          Campaign?          @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  campaignRecipient CampaignRecipient? @relation(fields: [campaignRecipientId], references: [id], onDelete: Cascade)
}
